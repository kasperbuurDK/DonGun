<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:PlayerSide"
             x:Class="PlayerSide.MainPage">
    <Grid
                Padding="2"
                RowSpacing="2"
                ColumnSpacing="2"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="CounterBtnPos"
                Text="Demo_btn_pos"
                Clicked="OnCounterNegClicked"
                HorizontalOptions="Center" 
                Grid.Column="0"/>

            <Button
                x:Name="CounterBtnNeg"
                Text="Demo_btn_neg"
                Clicked="OnCounterPosClicked"
                HorizontalOptions="Center"
                Grid.Column="1"/>
        <ScrollView
                Padding="0"
                Margin="0,0,0,0"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <custom:BlobStatView 
                x:Name="blob"
                Border="icon_border_dex"
                CharHp="0.7"/>
        </ScrollView>
    </Grid>
</ContentPage>