<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="myDiceSel"
             x:Class="PlayerSide.DiceSelectView">
    <ContentView.Content>
        <Frame
            CornerRadius="0"
            Padding="0"
            BorderColor="Black">
            <Grid
        x:Name="mainGrid"
        RowSpacing="5"
        ColumnSpacing="5"
        HorizontalOptions="Fill"
        VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image x:Name="backgroundImage" Aspect="Fill" Source="gray_wood"  Grid.ColumnSpan="2" Grid.RowSpan="4"/>
            </Grid>
        </Frame>
    </ContentView.Content>
</ContentView>
