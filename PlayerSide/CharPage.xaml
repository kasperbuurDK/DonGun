<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:PlayerSide"
             x:Class="PlayerSide.CharPage">
    <Grid
                Padding="2"
                RowSpacing="2"
                ColumnSpacing="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image x:Name="backgroundImage" Aspect="Fill" Source="gray_wood" Grid.RowSpan="3"/>
        <custom:CharView 
                x:Name="CharPc"
                CharHp="0.5"
                CharRes="0.5"/>
        <Border
            Grid.Row="2"
            Stroke="Black"
            StrokeThickness="3"
            BackgroundColor="Transparent"
            Padding="5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,10,10" />
            </Border.StrokeShape>
            <ScrollView
                Padding="0"
                Margin="0,0,0,0">
                <StackLayout
                Padding="2">
                </StackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>