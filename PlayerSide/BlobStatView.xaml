<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="myBorder"
             x:Class="PlayerSide.BlobStatView">
    <Frame
        BackgroundColor="WhiteSmoke"
        BorderColor="Transparent"                    
        Padding="0"
        Margin="0">
        <Grid>
            <Image
                    Source="{Binding borderImage, Source={x:Reference myBorder}}"
                    Aspect="Fill"
                    HorizontalOptions="Fill"/>
            <Label 
                x:Name="labelValue"
                Text="{Binding CharHpProperty, Source={x:Reference myBorder}, StringFormat='The value is {0}' }"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <ProgressBar x:Name="progressBarHp" Progress="{Binding CharHpProperty, Source={x:Reference myBorder}}" HorizontalOptions="Center" ScaleY="5" ProgressColor="Red"/>
        </Grid>
    </Frame>
</ContentView>
