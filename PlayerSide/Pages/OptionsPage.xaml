<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayerSide.Pages.OptionsPage">
    <Grid>
        <VerticalStackLayout Spacing="5" Padding="5">
            <Label Text="Welcome to .NET MAUI!"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            <Button x:Name="logoutBtn"
                    Text="Logout"
                    Clicked="LogoutBtnClicked" />
            <Button x:Name="SendFileUpEvent"
                    Text="DG_SendFileUpdateEvent"
                    Clicked="SendFileUpdateBtnClicked" />
            <Button x:Name="UserOptions"
                    Text="User options"
                    Clicked="UserOptionsBtnClicked" />
            <Button x:Name="Debug2"
                    Text="DebugMovePage"
                    Clicked="Debug2BtnClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>